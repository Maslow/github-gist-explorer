.history
  cursor: pointer
  &:hover
    box-shadow: 0 2px 3px rgba(0, 0, 0, 0.3)
    transition: box-shadow 0.3s ease-in-out

  .card-header
    border-bottom: 0

  .user-image
    width: 48px
    height: 48px

  .code-branch
    overflow: visible
    display: inline-block
    font-size: inherit
    width: 0.75e
    height: 1em
    vertical-align: -0.125em
